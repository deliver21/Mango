@model LoginRequestDto
@{
    ViewBag.Title = "Login";
}
<form method="post">
    <div class="container border border-1 border-secondary rounded">
        <div class="row text-center p-3">
            <h1>Login</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger list-unstyled"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserName" type="email" class="form-control" placeholder="User name"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-50 btn-success" value="submit">Login</button>
            </div>            
        </div>
    </div>
</form>
@section Scripts{
        <partial name="_ValidationScriptsPartial" />
} 